<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="181.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.NSeatsScreenController">
   <children>
      <HBox alignment="CENTER" prefHeight="69.0" prefWidth="600.0">
         <children>
            <Label alignment="CENTER" text="Enter Number of Seats:" textAlignment="CENTER">
               <font>
                  <Font name="SansSerif Bold" size="23.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="54.0" prefWidth="600.0" spacing="5.0">
         <children>
            <Button fx:id="minusButton" mnemonicParsing="false" onAction="#substract" text="-" />
            <TextField fx:id="numberOfSeats" alignment="CENTER" prefHeight="38.0" prefWidth="35.0" promptText="0">
               <font>
                  <Font name="SansSerif Regular" size="15.0" />
               </font>
            </TextField>
            <Button fx:id="plusButton" mnemonicParsing="false" onAction="#add" text="+" />
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" prefHeight="60.0" prefWidth="600.0" spacing="20.0">
         <children>
            <Button fx:id="btnGoBack" cancelButton="true" mnemonicParsing="false" onAction="#btnGoBack_Clicked" text="Go Back" />
            <Button alignment="CENTER_RIGHT" defaultButton="true" mnemonicParsing="false" onAction="#btnContinue_Clicked" text="Continue" />
         </children>
         <VBox.margin>
            <Insets right="20.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
